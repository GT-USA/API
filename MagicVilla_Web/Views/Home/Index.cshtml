@model IEnumerable<MagicVilla_Web.Models.DTO.VillaDTO>

<img class="d-block w-100" src="images/home/slide1.jpg" alt="" />
<hr />
<div class="row" style="--bs-gutter-x:0">
    @foreach (var villa in Model)
    {
        <div class="p-4 col-md-12 col-lg-6">
            <div class="row pt-3" style="border-radius:20px; border: 1px solid #ffffff">
                <div class="col-4">
                    <img class="d-block w-100" style="border-radius:20px;" src="@villa.ImageUrl" alt="First slide">
                </div>
                <div class="col-8">
                    <p class="card-subtitle text-warning text-opacity-50" style="font-size:xx-large"><strong>@villa.Name</strong></p>
                    <p class="card-text">
                        @((MarkupString)villa.Details)
                    </p>
                </div>
                <div class="col-12">
                    <div class="row pb-3 pt-2">
                        <div class="col-4">
                        <a href="" class="btn btn-success form-control btn-block">Book</a>
                        </div>
                    
                    <div class="col-4">
                        <span class="">Max Occupancy: @villa.Occupants adults</span><br />
                        <span class="">Villa Size: @villa.Sqft sqft</span><br />
                    </div>
                    <div class="col-4">
                        <span class="text-warning float-end font-weight-bold pt-1" style="font-size:25px;">
                                <span class="badge bg-primary rounded-pill text-center" style="border:0px solid">
                                @villa.Rate.ToString("c") / Day
                            </span>
                            <span />
                        </div>
                    </div>
                </div>
            </div>
            </div>
    }
</div>

