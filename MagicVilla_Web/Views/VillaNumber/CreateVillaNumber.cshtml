@model MagicVilla_Web.Models.ViewModel.VillaNumberCreateViewModel

<form asp-action="CreateVillaNumber">
    <br />
    <div class="container border p-3">
        <h1 class="btn-primary">Create Villa Number</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-2 p-2">
                <label asp-for="VillaNumber.VillaNo" class="control-label pt-2" style="font-size:20px;">Villa Number</label>
            </div>

            <div class="col-10 p-2">
                <input asp-for="VillaNumber.VillaNo" class="form-control"/>
                <span asp-validation-for="VillaNumber.VillaNo" class="text-danger"></span>
            </div>

            <div class="col-2 p-2">
                <label asp-for="VillaNumber.VillaID" class="control-label pt-2" style="font-size:20px;">Villa</label>
            </div>

            <div class="col-10 p-2">
                <select asp-for="VillaNumber.VillaID" class="form-select" asp-items="@Model.VillaList">
                    <option disabled selected>--Select Villa--</option>
                </select>
                <span asp-validation-for="VillaNumber.VillaID" class="text-danger"></span>
            </div>
            <div class="col-2 p-2">
                <label asp-for="VillaNumber.SpecialDetails" class="control-label pt-2" style="font-size:20px;">Details</label>
            </div>
            <div class="col-10 p-2">
                <textarea asp-for="VillaNumber.SpecialDetails" class="form-control"></textarea>
                <span asp-validation-for="VillaNumber.SpecialDetails" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2 p-2">
                <a asp-action="IndexVillaNumber" asp-controller="VillaNumber" class="btn-primary btn form-control">Back to List</a>
            </div>

            <div class="col-5 p-2">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
