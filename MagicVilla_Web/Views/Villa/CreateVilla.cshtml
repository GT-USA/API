@model MagicVilla_Web.Models.DTO.VillaDTOCreate

<form asp-action="CreateVilla">
    <br/>
    <div class="container border p-3">
        <h1 class="btn-primary">Create Villa</h1>
        <hr/>
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="col-2 p-2">
            <label asp-for="@Model.Name" class="control-label pt-2" style="font-size:20px;"></label>
        </div>

            <div class="col-10 p-2">
                <input asp-for="@Model.Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

            <div class="col-2 p-2">
            <label asp-for="@Model.Rate" class="control-label pt-2" style="font-size:20px;"></label>
        </div>

            <div class="col-10 p-2">
            <input asp-for="@Model.Rate" class="form-control"/>
            <span asp-validation-for="Rate" class="text-danger"></span>
        </div>

            <div class="col-2 p-2">
            <label asp-for="@Model.Occupants" class="control-label pt-2" style="font-size:20px;"></label>
        </div>

            <div class="col-10 p-2">
            <input asp-for="@Model.Occupants" class="form-control" />
            <span asp-validation-for="Occupants" class="text-danger"></span>
        </div>

            <div class="col-2 p-2">
            <label asp-for="@Model.Sqft" class="control-label pt-2" style="font-size:20px;"></label>
        </div>

            <div class="col-10 p-2">
            <input asp-for="@Model.Sqft" class="form-control"/>
            <span asp-validation-for="Sqft" class="text-danger"></span>
        </div>

            <div class="col-2 p-2">
            <label asp-for="@Model.Amenity" class="control-label pt-2" style="font-size:20px;"></label>
        </div>

            <div class="col-10 p-2">
            <textarea asp-for="@Model.Amenity" class="form-control" ></textarea>
            <span asp-validation-for="Amenity" class="text-danger"></span>
        </div>

            <div class="col-2 p-2">
            <label asp-for="@Model.Details" class="control-label pt-2" style="font-size:20px;"></label>
        </div>

            <div class="col-10 p-2">
            <textarea asp-for="@Model.Details" class="form-control"  rows="5"></textarea>
            <span asp-validation-for="Details" class="text-danger"></span>
        </div>

            <div class="col-2 p-2">
            <label asp-for="@Model.ImageUrl" class="control-label pt-2" style="font-size:20px;"></label>
        </div>

            <div class="col-10 p-2">
            <input asp-for="@Model.ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

            <div class="col-5 offset-2 p-2">
            <a asp-action="IndexVilla" asp-controller="Villa" class="btn-primary btn form-control">Back to List</a>
        </div>

            <div class="col-5 p-2">
            <input type="submit" value="Create" class="btn btn-success form-control" />
        </div>
        </div>
    </div>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
